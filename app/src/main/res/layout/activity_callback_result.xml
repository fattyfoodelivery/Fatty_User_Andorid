<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.orikino.sdk.callback.CallbackResultActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imv_pay_success"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_order_success_20dp"
        android:layout_marginTop="35dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pay_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success"
        android:textColor="@color/fattyDark"
        android:textSize="32sp"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fatty_regular"
        android:layout_below="@id/imv_pay_success"/>

</RelativeLayout>