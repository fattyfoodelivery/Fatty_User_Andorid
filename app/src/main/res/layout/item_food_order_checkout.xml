<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imv_food_item"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/restaurant_default_img"
        android:background="@color/gray_four"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
        android:layout_marginStart="8dp"/>
    <LinearLayout
        android:id="@+id/ll_item_spec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imv_food_item"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@id/ll_qty"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:gravity="center|top"
            android:textAlignment="viewStart"
            android:ellipsize="end"
            android:textColor="@color/text_secondary_01"
            android:fontFamily="@font/outfit_regular"
            tools:targetApi="p"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            tools:targetApi="p"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_primary_01"
            android:fontFamily="@font/outfit_regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_minus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/fattyPrimaryLight">
            <View
                android:layout_width="12dp"
                android:layout_height="2dp"
                android:background="@color/fattyPrimary"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_item_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:textSize="18sp"
            android:textColor="@color/text_primary_01"
            android:fontFamily="@font/outfit_regular"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_plus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/fattyPrimaryLight">
            <View
                android:layout_width="12dp"
                android:layout_height="2dp"
                android:background="@color/fattyPrimary"
                android:layout_gravity="center"/>
            <View
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:background="@color/fattyPrimary"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add More Items"
        android:textColor="@color/fattyPrimary"
        android:textSize="15sp"
        android:visibility="gone"
        android:layout_below="@id/imv_food_item"
        android:layout_margin="8dp"/>

</RelativeLayout>