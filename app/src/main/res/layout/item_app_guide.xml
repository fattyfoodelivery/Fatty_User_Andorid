<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="24dp">


        <ImageView
            android:id="@+id/guidePhoto"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:scaleType="fitXY"
            android:foreground="@drawable/background_gradient"
            android:background="@drawable/ic_play_placeholder">

        </ImageView>

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_play"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to play an order"
                android:fontFamily="@font/outfit_medium"
                android:textSize="18sp"
                android:textColor="@color/textSecondary"
                android:layout_gravity="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imv_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fatty_rounded"/>
                <ImageView
                    android:id="@+id/imv_youtube_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_youtube_play"
                    app:cardBackgroundColor="@color/textError"
                    android:layout_alignBottom="@id/imv_logo"
                    android:layout_marginBottom="2dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/imv_youtube_play"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fatty Food"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/outfit_medium"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Youtube"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:fontFamily="@font/outfit_regular"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>