<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".ui.views.fragments.rest_more_info.RestaurantAboutFragment">

    <LinearLayout
            android:id="@+id/rv_food_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textColor="@color/text_primary_01"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/outfit_medium"
                android:layout_gravity="start"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_111_lily_lorem_ipsum_dolor_sat_morem_ipsum_street_block_2_lashio"
                android:textColor="@color/textPrimary02"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/outfit_regular"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tv_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_hours"
                android:textColor="@color/text_primary_01"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/outfit_medium"
                android:layout_gravity="start"/>
            <!--mon fri-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tv_mon_fri"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/mon_fri"
                    android:textColor="@color/textPrimary02"
                    android:textSize="16sp"
                    android:fontFamily="@font/outfit_medium"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_mon_fri_time"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textAlignment="textStart"
                    android:layout_height="wrap_content"
                    android:text="@string/_10_00am_04_30_pm"
                    android:textColor="@color/text_secondary_01"
                    android:textSize="16sp"
                    android:fontFamily="@font/outfit_medium"
                    android:layout_gravity="center_vertical"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <!--sat-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tv_sat"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/sat"
                    android:textColor="@color/textPrimary02"
                    android:textSize="16sp"
                    android:fontFamily="@font/outfit_medium"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_sat_time"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textAlignment="textStart"
                    android:layout_height="wrap_content"
                    android:text="@string/_10_00am_04_30_pm"
                    android:textColor="@color/text_secondary_01"
                    android:textSize="16sp"
                    android:fontFamily="@font/outfit_medium"
                    android:layout_gravity="center_vertical"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <!--sun-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tv_sun"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/sun"
                    android:textColor="@color/textPrimary02"
                    android:textSize="16sp"
                    android:fontFamily="@font/outfit_medium"
                    android:layout_gravity="start"/>
                <TextView
                    android:id="@+id/tv_sun_time"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textAlignment="textStart"
                    android:layout_height="wrap_content"
                    android:text="@string/_10_00am_04_30_pm"
                    android:textColor="@color/text_secondary_01"
                    android:textSize="16sp"
                    android:fontFamily="@font/outfit_medium"
                    android:layout_gravity="center_vertical"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <!--android:name="com.google.android.gms.maps.SupportMapFragment"-->
            <FrameLayout
                android:id="@+id/restaurant_map"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:background="@drawable/bg_try_again">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Map"
                    android:textColor="@color/fattyPrimary"
                    android:fontFamily="@font/outfit_regular"
                    android:textSize="24sp"
                    android:layout_gravity="center"/>
            </FrameLayout>

        </LinearLayout>



</RelativeLayout>