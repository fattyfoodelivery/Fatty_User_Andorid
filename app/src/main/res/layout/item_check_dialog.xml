<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:text="@string/choose_your_service_region"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_toLeftOf="@id/iv_close"
                android:textColor="@color/text_primary_01"
                android:fontFamily="@font/fatty_regular"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_circle_close_24dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_lashio"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/bg_region_choice"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:id="@+id/tv_lashio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lashio"
                android:fontFamily="@font/fatty_semibold"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_check_lashio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_circle_check"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_muse"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/bg_region_choice"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:id="@+id/tv_muse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/muse"
                android:fontFamily="@font/fatty_semibold"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_check_muse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/radio_button_unchecked"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/fatty_regular"
            android:textColor="@color/textSecondary"
            android:background="@drawable/positive_button"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>