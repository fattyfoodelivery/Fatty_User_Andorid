<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="@dimen/margin_3xSmall"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/rounded_bg_color"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_large">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_shop_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_shop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintDimensionRatio="1:1"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Corner8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/restaurant_default_img"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_shop"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="@dimen/margin_large"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Clothing Store"
                    android:background="@drawable/bg_shop_category"
                    android:fontFamily="@font/fatty_regular"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:paddingHorizontal="@dimen/margin_2xSmall"
                    android:paddingVertical="@dimen/margin_4xSmall"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_category"
                    android:layout_marginTop="@dimen/margin_4xSmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/fatty_regular"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary_01"
                    tools:text="Amara Moe &amp; Amara Myay Shun Updated &amp; New Latest  Fashion Shop"
                    android:maxLines="2"
                    android:ellipsize="end"/>
                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_current_marker_80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_address"
                    app:layout_constraintBottom_toBottomOf="@id/tv_address"
                    app:tint="@color/text_secondary_01" />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/iv_location"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_name"
                    android:layout_marginTop="@dimen/margin_3xSmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/fatty_regular"
                    android:layout_marginStart="@dimen/margin_2xSmall"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary02"
                    tools:text="Insein, Yangon"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <ImageView
                    android:id="@+id/iv_note"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_shop_note"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_distance"
                    app:layout_constraintBottom_toBottomOf="@id/tv_distance"/>
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/iv_location"
                    app:layout_constraintTop_toBottomOf="@id/tv_address"
                    android:layout_marginTop="@dimen/margin_3xSmall"
                    android:fontFamily="@font/fatty_regular"
                    android:layout_marginStart="@dimen/margin_2xSmall"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary02"
                    tools:text="6 km"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/tv_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/tv_distance"
                    app:layout_constraintTop_toBottomOf="@id/tv_address"
                    android:layout_marginTop="@dimen/margin_3xSmall"
                    android:fontFamily="@font/fatty_regular"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary02"
                    android:text="ãƒ»"
                    android:maxLines="2"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/tv_shop_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/tv_dot"
                    app:layout_constraintTop_toBottomOf="@id/tv_address"
                    android:layout_marginTop="@dimen/margin_3xSmall"
                    android:fontFamily="@font/fatty_regular"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary02"
                    tools:text="Close Now"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_shop_close"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintDimensionRatio="1:1"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Corner8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_shop_close"/>
        <TextView
            android:id="@+id/tv_close_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_closed_now"
            android:textSize="10sp"
            android:layout_marginHorizontal="@dimen/margin_2xSmall"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/iv_shop_close"
            app:layout_constraintStart_toStartOf="@id/iv_shop_close"
            app:layout_constraintBottom_toBottomOf="@id/iv_shop_close"
            app:layout_constraintTop_toTopOf="@id/iv_shop_close"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>