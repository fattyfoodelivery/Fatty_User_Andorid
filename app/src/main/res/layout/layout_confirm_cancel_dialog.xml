<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    android:elevation="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="18dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:text="Status"
                android:textSize="18sp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@id/iv_close"
                android:textColor="@color/text_primary_01"
                android:fontFamily="@font/outfit_regular"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_circle_close_24dp"/>
        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="desc"
            android:textSize="16sp"
            android:layout_gravity="start"
            android:textColor="@color/text_secondary_01"
            android:fontFamily="@font/outfit_regular"/>


        <LinearLayout
            android:id="@+id/ll_double_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="visible"
            android:layout_marginTop="18dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:text="Cancel"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/text_primary_01"
                android:textSize="18sp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/negative_btn"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnContact"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:text="Call Center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/outfit_regular"
                android:textAlignment="center"
                android:background="@drawable/positive_button"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>