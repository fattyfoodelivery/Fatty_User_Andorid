                            android:text="Extra Cover Costs"
                            android:textSize="14sp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_extra_cover_cost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/outfit_regular"
                            android:text="Ks. 1,500"
                            android:textAlignment="textEnd"
                            android:textSize="14sp"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="0.4"
                            android:padding="2dp"
                            android:fontFamily="@font/outfit_regular"
                            android:text="@string/delivery_fees"
                            android:textSize="14sp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_deli_fee"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="0.6"
                            android:text="Ks. 1,000"
                            android:fontFamily="@font/outfit_regular"
                            android:textAlignment="textEnd"
                            android:textSize="14sp"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="16dp"
                        android:background="@color/grey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="0.6"
                            android:textStyle="bold"
                            android:padding="2dp"
                            android:fontFamily="@font/outfit_regular"
                            android:textColor="@color/black"
                            android:text="@string/bill_details"
                            android:textSize="16sp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_total_estimated_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="0.4"
                            android:text="Ks. 2,500"
                            android:fontFamily="@font/outfit_regular"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

