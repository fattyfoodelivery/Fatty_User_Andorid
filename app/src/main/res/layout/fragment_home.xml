                            app:cardElevation="0dp"
                            app:layout_constraintStart_toEndOf="@id/cv_second_service"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_service_background"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/margin_large"
                                    android:layout_marginStart="@dimen/margin_small"
                                    android:layout_marginEnd="@dimen/margin_2xSmall"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <RelativeLayout
                                        android:id="@+id/rl_more_tile"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        app:layout_constraintEnd_toStartOf="@+id/iv_more_service"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">
                                        <TextView
                                            android:id="@+id/tv_more_service_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/margin_4xSmall"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/fatty_medium"
                                            android:maxLines="1"
                                            android:text="@string/txt_services"
                                            android:breakStrategy="simple"
                                            android:hyphenationFrequency="none"
                                            android:textAlignment="textStart"
                                            android:layout_alignParentStart="true"
                                            android:layout_toStartOf="@id/rl_more_count"
                                            android:textColor="@color/text_primary_01"
                                            android:textSize="16sp"
                                             />
                                        <RelativeLayout
                                            android:id="@+id/rl_more_count"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_marginEnd="@dimen/margin_4xSmall"
                                            android:layout_alignParentEnd="true"
                                            android:background="@drawable/bg_fatty_round">
                                            <TextView
                                                android:id="@+id/tv_service_count"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:layout_centerInParent="true"
                                                android:fontFamily="@font/fatty_medium"
                                                android:maxLines="1"
                                                android:text="+99"
                                                android:textColor="@color/white"
                                                android:textSize="12sp"/>
                                        </RelativeLayout>

                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/tv_more_service_desc"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_4xSmall"
                                        android:layout_marginEnd="@dimen/margin_4xSmall"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/fatty_regular"
                                        android:maxLines="1"
                                        android:text="@string/txt_view_more"
                                        android:textColor="@color/text_secondary_04"
                                        android:textSize="14sp"
                                        app:layout_constraintEnd_toStartOf="@+id/iv_more_service"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/rl_more_tile" />

                                    <ImageView
                                        android:id="@+id/iv_more_service"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_arrow_forword"
                                        android:tint="@color/fattyPrimary"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </HorizontalScrollView>


