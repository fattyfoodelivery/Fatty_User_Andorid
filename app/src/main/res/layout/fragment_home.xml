                    android:clipToPadding="false"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_you_might_like" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_near_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/fatty_medium"
                    android:text="@string/near_for_you"
                    android:textColor="@color/text_primary_01"
                    android:textSize="18sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_recommend_restaurant" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_near_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:minHeight="200dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_near_you" />

                <ProgressBar
                    android:id="@+id/nearby_load_more"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_near_restaurant" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        android:id="@+id/layout_network_error"
        layout="@layout/home_connection_error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/constraint_toolbar"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>